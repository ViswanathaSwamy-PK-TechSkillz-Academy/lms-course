@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity!.IsAuthenticated)
{
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Welcome back, @User.Identity.Name!</h4>
        <p>Thank you for logging in. Enjoy our premium features!</p>
        <!-- Add more content for authenticated users here -->
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">Hello, Guest!</h4>
        <p>To access more features, please <a href="/Identity/Account/Login" class="btn btn-success">Login</a> or <a href="/Identity/Account/Register" class="btn btn-primary">Register</a>.</p>
        <!-- Add more content for anonymous users here -->
    </div>
}
